{% import "macro/macro_form.twig" as forms %}
<h1>Edit profile</h1>
<form action="{{ url }}dashboard/editprofile/{{ user.uid }}" method="post">
{%
  set param = {
    labelBefore: 'User name:',
    size: 30,
    value: user.user
  }
%}

{{ forms.input('username' , 'text' , param) }}

{%
  set param = {
    labelBefore: 'First/Last name:',
    value: user.name
  }
%}

{{ forms.input('name', 'text', param) }}

{%
  set param = {
    labelBefore: 'E-mail:',
    value: user.email
  }
%}

{{ forms.input('email', 'text', param) }}


{{ forms.submit('update_profile' , 'submit' , 'update profile' , 'form-action' , 'form-submit' ) }}

</form>