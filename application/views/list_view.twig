{% if ajax != true %}
<div class="replay_list">
{% endif %}

    <div class="view-item item-head">
      <p class="item-row title-h">Title</p>
      <p class="item-row saver-h" >Saver</p>
      <p class="item-row date-h">Upload date</p>
      <p class="item-row link">
        Detalis/Download
      </p>
    </div>

  {% for list in lists %}
    <div class="view-item">
      <p class="item-row title"> {{ list.title }} </p>
      <p class="item-row saver" > {{ list.saver  }}</p>
      <p class="item-row date">
        {{ list.date|date("m/d/Y") }}
        {{ list.date|date("H:m") }}
      </p>
      <p class="item-row link">
        {% set len = list.link|length - 4 %}
        {% set viewLink = list.link|slice( 0 , len ) %}
        <a class="preview" href="/view/save/{{ viewLink }}" ><i class="fa fa-list"></i>Details</a>
        <a class="download" href="/replay/{{ list.link }}"><i class="fa fa-cloud-download"></i>Download</a>
      </p>
    </div>
  {% endfor %}

  {{ pagination|raw }}

{% if ajax == false %}
</div>
{% endif %}